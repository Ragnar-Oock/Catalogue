{% extends 'base.html.twig' %}

{% block title %}Modifier un type de participation{% endblock %}

{% block main %}
<div class="fiche">
    <h1 class="fiche__title">Modifier un type de participation</h1>

    {{ include('participation_type/_form.html.twig', { 'noBtn': true }) }}
    {% if allowDelete %}
        {{ include('participation_type/_delete_form.html.twig', { 'noBtn': true }) }}
	{% endif %}

    <div class="d-flex">
        <button form="delete-participationType" class="btn btn-outline-danger ml-auto mr-3"{% if allowDelete is same as(false) %}data-toggle="modal" data-target="#delete-dialogue"{% endif %}>Supprimer</button>
        <div class="btn-group">
            <a href="{{ path('participation_type_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
            <button form="edit-participationType" class="btn btn-secondary">Enregistrer</button>
        </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="delete-dialogue">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header align-items-center">
					<span aria-hidden="true" class="mr-3" style="font-size: 1.5em">
						{% include "icons/warning.svg.twig" %}
					</span>
					<h5 class="modal-title">Impossible de supprimer ce type de participation</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<p>Ce type de participation est utilisé par au moins une édition, modifiez ou supprimez cette edition avant de supprimer de type de participation</p>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}
