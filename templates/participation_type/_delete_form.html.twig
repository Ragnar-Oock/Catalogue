<form method="post" id="delete-participationType" action="{{ path('participation_type_delete', {'id': participation_type.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participation_type.id) }}">
    {% if noBtn is not defined %}
        <button class="btn">Delete</button>
    {% endif %}
</form>
