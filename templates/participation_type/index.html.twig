{% extends 'base.html.twig' %}

{% block title %}Types de participation{% endblock %}

{% block main %}
<div class="d-flex align-items-center">
    <h1>Types de participation</h1>
    <a href="{{ path('participation_type_new') }}" class="btn btn-secondary ml-auto">Ajouter un type de participation</a>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participation_type in participation_types %}
            <tr>
                <td>{{ participation_type.title }}</td>
                <td>{{ participation_type.description|u.truncate(80, '...') }}</td>
                <td class="text-right">
                    <div class="btn-group ml-auto">
                        <a href="{{ path('participation_type_edit', {'id': participation_type.id}) }}" title="Modifier" class="btn btn-secondary">{% include "icons/pen.svg.twig" %}</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">
                    <div class="flex flex-column">
                        <p>Aucun type de participation trouv√©, essayez d'en ajouter un.</p>
                        <a href="{{ path('participation_type_new') }}" class="btn btn-secondary">Ajouter un type de participation</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
