{% extends 'base.html.twig' %}

{% block title %}Types de participation{% endblock %}

{% block main %}
    <h1>Types de participation</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for participation_type in participation_types %}
            <tr>
                <td>{{ participation_type.title }}</td>
                <td>{{ participation_type.description|u.truncate(80, '...') }}</td>
                <td>
                    <a href="{{ path('participation_type_edit', {'id': participation_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">
                    <div class="flex flex-column">
                        <p>Aucun type de participation trouv√©, essayez d'en ajouter un.</p>
                        <a href="{{ path('participation_type_new') }}" class="btn btn-primary">Ajouter un type de participation</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('participation_type_new') }}" class="btn btn-primary">Ajouter un type de participation</a>
{% endblock %}
