{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block main %}

{% if is_granted('ROLE_ADMIN') %}
<a href="{{ path('author_edit', {'id': author.id}) }}" class="btn btn-primary">Modifier</a>
{% endif %}
    <h1>Fiche d'auteur : {{ author.name }}</h1>

    <h2>Informations</h2>
    <table class="table">
        <tbody>
            <tr>
                <th>Date de naissance</th>
                <td>{{ author.birth ? author.birth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de mort</th>
                <td>{{ author.death ? author.death|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Bibliographie</h2>
    <table class="results table">
        <thead class="results_head">
            <th class="results_head__label">Titre</th>
            <th class="results_head__label">Auteurs</th>
            <th class="results_head__label">Editeur(s)</th>
            <th class="results_head__label">Type de document</th>
            <th class="results_head__label">Date d'Ã©dition</th>
        </thead>
        <tbody>
        {% for result in bibliography %}
            {{ include('site/explore/_resultItem.html.twig') }}
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(bibliography) }}
    </div>
{% endblock %}