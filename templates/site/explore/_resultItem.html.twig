<tr class="result_item">
	<td class="result_item__title"><a href="{{ path('explore_edition', {'edition': result.edition.id}) }}" title="Voir plus d'informations">{{ result.edition.document.title }}</a></td>
	<td class="result_item__author">
		{% if result.edition.writers is not empty %}
			{% for writer in result.edition.writers %}
				<a href="{{ path('explore_author', {'author': writer.author.id}) }}" title="Voir la bibliographie de cet auteur">{{ writer.author.name }}</a>
			{% endfor %}
			{# {% if result.authors|length>1 %}
			<span>Ce document a d'autres auteurs, visitez sa fiche pour les voir</span>
			{% endif %}				 #}
		{% endif %}
	</td>
	<td class="result_item__editeur">
		{% if result.edition.editor is not empty %}
			{% for editor in result.edition.editor %}
				<a href="{{ path('explore_edition', {'edition': editor.id}) }}" title="Voir la bibliographie de cet editeur">{{ editor.name }}</a>
			{% endfor %}
			{% if result.authors|length>1 %}
			<span>Ce document a d'autres auteurs, visitez sa fiche pour les voir</span>
			{% endif %}
		{% endif %}
		</td>
	<td class="result_item__type">{{ result.edition.type.title }}</td>
	<td class="result_item__date">{{ result.edition.publishedAt|date("d/m/Y") }}</td>
</tr>