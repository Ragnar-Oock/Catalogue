{% extends 'base.html.twig' %}

{% block title %}Modifier un participants{% endblock %}

{% block main %}
    <div class="container-medium">
        <h1>Modifier un participants</h1>
        <p>modification d'un auteur pour l'édition <a href="{{ path('explore_edition', {'edition': edition.id}) }}" title="Voir la fiche de ce document">{{edition.document.title}}</a></p>

        {{ include('admin/writer/_form.html.twig', {'button_label': 'Update'}) }}
        {{ include('admin/writer/_delete_form.html.twig',  {'noBtn': true}) }}

        <div class="row">
            <div class="ml-auto mr-2 btn-group">
                {% if writer is defined %}
                    <a href="{{ path('writer_index', {'edition': writer.edition.id }) }}" class="btn btn-outline-secondary">Retour à la liste</a>
                {% endif %}
                <button class="btn btn-outline-danger" form="writter-delete-{{writer.id}}">Supprimer</button>
            </div>
        
            <div class="input-group w-auto">
                <span class="input-group-text" id="addon-wrapping">Enregistrer et</span>
                <div class="input-group-append">
                    <button type="submit" form="writer-form" id="writer_save" name="writer[save]" class="btn-secondary btn">retourner à l'edition</button>
                    <button type="submit" form="writer-form" id="writer_saveAndAddMore" name="writer[saveAndAddMore]" class="btn-secondary btn">ajouter d'autres participants</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
