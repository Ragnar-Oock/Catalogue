<form method="post" action="{{ path('writer_delete', {'id': writer.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir retirer cet auteur?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ writer.id) }}">
    <button class="btn">Supprimer</button>
</form>
