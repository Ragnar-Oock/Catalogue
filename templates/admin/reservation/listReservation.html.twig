{% extends 'base.html.twig' %}

{% block title %}{{ title }}
{% endblock %}

{% block main %}
	<h2>{{ title }}
	{% if reservationCount is defined %}
		<span class="badge badge-pill badge-dark">{{reservationCount}}</span>
	{% endif %}
	
	</h2>
	<table class="table">
		<thead>
			<th>Utilisateur</th>
			<th>Document</th>
			<th>Debut - Fin</th>
                <th class="text-right">Actions</th>
		</thead>
		<tbody>
			{% for reservation in reservations %}
				{{ include('admin/reservation/_reservationItem.html.twig') }}
			{% endfor %}
		</tbody>
	</table>
	<div class="d-flex justify-content-center">
		{{ knp_pagination_render(reservations) }}
	</div>
{% endblock %}
