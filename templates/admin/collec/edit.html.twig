{% extends 'base.html.twig' %}

{% block title %}Modifier une collection{% endblock %}

{% block main %}
<div class="fiche">
    <h1 class="fiche__title">Modifier une collection</h1>

    {{ include('admin/collec/_form.html.twig', {'noBtn': true}) }}

    {{ include('admin/collec/_delete_form.html.twig', {'noBtn': true}) }}

    <div class="row">
        <button class="btn btn-outline-danger ml-auto mr-2 " form="delete-collec-{{collec.id}}">Supprimer</button>
        <div class="btn-group">
            <a href="{{ path('collec_index') }}" class="btn btn-outline-secondary">Annuler</a>
            <button class="btn btn-secondary" form="edit-collec">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
</div>   
{% endblock %}
