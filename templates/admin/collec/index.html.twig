{% extends 'base.html.twig' %}

{% block title %}Liste des collections{% endblock %}

{% block main %}
    <h1>Liste des collections</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collec in collecs %}
            <tr>
                <td>{{ collec.title }}</td>
                <td>{{ collec.description }}</td>
                <td class="text-right">
                    <div class="btn-group ml-auto">
                        {# <a href="{{ path('explore_collection', {'collection': collec.id}) }}">Afficher</a>
                        <a href="{{ path('collec_edit', {'id': collec.id}) }}">Modifier</a> #}

                        <a href="{{ path('explore_collection', {'collection': collec.id}) }}" title="Voir la fiche" class="btn btn-primary">{% include "icons/file-earmark.svg.twig" %}</a>
                        <a href="{{ path('collec_edit', {'id': collec.id}) }}" title="Modifier" class="btn btn-primary">{% include "icons/pen.svg.twig" %}</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">
                    <div class="flex flex-column">
                        <p>Aucune collection trouv√©e, essayez d'en ajouter une.</p>
                        <a href="{{ path('collec_new') }}" class="btn btn-primary">Ajouter une collection</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('collec_new') }}" class="btn btn-primary">Ajouter une collection</a>
{% endblock %}
