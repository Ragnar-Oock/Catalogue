{% extends 'base.html.twig' %}

{% block title %}Modifier une édition{% endblock %}

{% block main %}
<div class="fiche">
    <h1>Modifier une édition</h1>

    {{ include('admin/edition/_form.html.twig', {'button_label': 'Enregistrer', 'noBtn': true}) }}

    {{ include('admin/edition/_delete_form.html.twig', {'noBtn': true}) }}


    <div class="row">
        <button class="btn btn-outline-danger ml-auto mr-2 " form="delete-author">Supprimer</button>
        <div class="btn-group">
            <a href="{{ path('edition_index') }}" class="btn btn-outline-secondary">Annuler</a>
            <a href="{{ path('writer_index', {'edition': edition.id }) }}" class="btn btn-outline-secondary">Gérer les participants</a>
            <button class="btn btn-secondary" form="edit-edition">Enregistrer</button>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script>
$("#edition_publishedAt").datetimepicker({
    locale: 'fr',
    icons: {
        time: "fa fa-clock-o",
    },
    format: 'DD/MM/YYYY',
    maxDate: Date.now(),
    useCurrent: false
});
</script>
{% endblock %}