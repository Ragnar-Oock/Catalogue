{% extends 'base.html.twig' %}

{% block title %}Modifier une édition{% endblock %}

{% block main %}
    <h1>Modifier une édition</h1>

    {{ include('admin/edition/_form.html.twig', {'button_label': 'Enregistrer'}) }}

    <a href="{{ path('edition_index') }}" class="btn btn-primary">Annuler</a>

    {{ include('admin/edition/_delete_form.html.twig') }}

    <a href="{{ path('writer_index', {'edition': edition.id }) }}" class="btn btn-primary">Gérer les participants</a>

{% endblock %}

{% block javascripts %}
<script>
$("#edition_publishedAt").datetimepicker({
    locale: 'fr',
    icons: {
        time: "fa fa-clock-o",
    },
    format: 'DD/MM/YYYY',
    maxDate: Date.now()
});
</script>
{% endblock %}