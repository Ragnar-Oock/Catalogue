{% extends 'base.html.twig' %}

{% block title %}Ajouter un auteur{% endblock %}

{% block main %}
<div class="fiche">
    <h1>Ajouter un auteur</h1>

    {{ include('admin/author/_form.html.twig', {'button_label': 'Enregistrer', 'noBtn': true}) }}

    <div class="row">
        <div class="btn-group ml-auto">
            <a href="{{ path('author_index') }}" class="btn btn-outline-secondary">Annuler</a>
            <button class="btn btn-secondary" form="edit-author">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
$("#author_birth").datetimepicker({
    locale: 'fr',
    icons: {
        time: "fa fa-clock-o",
    },
    format: 'DD/MM/YYYY'
});

$("#author_death").datetimepicker({
    locale: 'fr',
    icons: {
        time: "fa fa-clock-o",
    },
    format: 'DD/MM/YYYY'
});


$("#author_birth").on("change.datetimepicker", function (e) {
    $('#author_death').datetimepicker('minDate', e.date);
});
$("#author_death").on("change.datetimepicker", function (e) {
    $('#author_birth').datetimepicker('maxDate', e.date);
});
</script>
{% endblock %}
