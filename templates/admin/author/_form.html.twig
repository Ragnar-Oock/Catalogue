{{ form_start(form, {'attr': {'id': 'edit-author'}}) }}
    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
        </div>
    </div>
    <div class="row">
        <div class="position-relative col-lg-6 col-sm12">
            {{ form_row(form.birth) }}
        </div>
        <div class="position-relative col-lg-6 col-sm12">
            {{ form_row(form.death) }}
        </div>
    </div>
    {% if noBtn is not defined %}
        <button class="btn btn-secondary">{{ button_label|default('Enregistrer') }}</button>
    {% endif %}
{{ form_end(form) }}
