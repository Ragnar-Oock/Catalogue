{% extends 'base.html.twig' %}

{% block title %}Fond index{% endblock %}

{% block main %}
<div class="d-flex">
    <h1>Fond index</h1>
    <a href="{{ path('fond_new') }}" class="btn btn-secondary ml-auto text-nowrap">Ajouter un fond</a>
</div>
	<div class="table__container">

        <table class="table">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for fond in fonds %}
                <tr>
                    <td>{{ fond.title }}</td>
                    <td>{{ fond.description | u.truncate(50,'...') }}</td>
                    <td class="text-right">
                        <div class="btn-group ml-auto">
                            <a href="{{ path('fond_edit', {'id': fond.id}) }}" title="Modifier" class="btn btn-secondary">{% include "icons/pen.svg.twig" %}</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">
                        <div class="flex flex-column">
                            <p>Aucun fond trouv√©, essayez d'en ajouter un.</p>
                            <a href="{{ path('fond_new') }}" class="btn btn-secondary">Ajouter un fond</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
