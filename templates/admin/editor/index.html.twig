{% extends 'base.html.twig' %}

{% block title %}Editor index{% endblock %}

{% block main %}
    <a href="{{ path('admin') }}" class="btn btn-link">Retour au tableau de bord</a>

    <h1>Liste des éditeurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for editor in editors %}
            <tr>
                <td>{{ editor.name }}</td>
                <td>{{ editor.address }}</td>
                <td>
                    <a href="{{ path('editor_show', {'id': editor.id}) }}">Afficher</a>
                    <a href="{{ path('editor_edit', {'id': editor.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">
                    <div class="flex flex-column">
                        <p>Aucun editeur trouvé, essayez d'en ajouter un.</p>
                        <a href="{{ path('editor_new') }}" class="btn btn-secondary">Ajouter un éditeur</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('editor_new') }}" class="btn btn-secondary">Ajouter un éditeur</a>
{% endblock %}
