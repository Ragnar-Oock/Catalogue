{% extends 'base.html.twig' %}

{% block title %}Modifier un éditeur{% endblock %}

{% block main %}

<div class="fiche">
    <h1 class="fiche__title">Modifier un éditeur</h1>

    {{ include('admin/editor/_form.html.twig', {'button_label': 'Enregistrer', 'noBtn': true}) }}

    {{ include('admin/editor/_delete_form.html.twig', {'noBtn': true}) }}


    <div class="d-flex">
        <button form="delete-editor" class="btn btn-outline-danger ml-auto mr-3">Supprimer</button>
        <div class="btn-group">
            <a href="{{ path('editor_index') }}" class="btn btn-outline-secondary">Annuler</a>
            <button class="btn btn-secondary" form="edit-editor">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>

</div>

{% endblock %}
