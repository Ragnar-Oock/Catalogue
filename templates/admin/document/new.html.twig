{% extends 'base.html.twig' %}

{% block title %}Ajouter un document{% endblock %}

{% block main %}
<div class="fiche">
    <h1 class="fiche__title">Ajouter un document</h1>

    {{ include('admin/document/_form.html.twig', {'button_label': 'Enregistrer', 'noBtn': true}) }}

    <div class="row">
        <div class="btn-group ml-auto">
            <a href="{{ path('document_index') }}" class="btn btn-outline-secondary">Annuler</a>
            <button class="btn btn-secondary" form="form-document">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
</div>
{% endblock %}
